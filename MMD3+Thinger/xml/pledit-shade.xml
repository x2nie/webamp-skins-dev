<groupdef id="pledit.songdisplay">
	<text id="PLEditSongTicker" ticker="0" x="10" y="2" w="-44" relatw="1" h="21" display="songname" default="" font="player.ticker.font3" align="left" dblClickAction="SWITCH;normal" nograb="1" move="1" />
	<text id="PLEditSongLength" x="-37" w="30" relatx="1" y="2" h="21" display="songlength" font="player.ticker.font3" align="right" dblClickAction="SWITCH;normal" nograb="1" move="1" />
</groupdef>

<groupdef id="pledit.stick.content.group">
	<layer id="pledit.left" dblClickAction="SWITCH;NORMAL" x="0" y="0" image="pl.left" resize="left" sysregion="1" />
	<layer id="pledit.right" dblClickAction="SWITCH;NORMAL" x="-57" relatx="1" y="0" image="pl.right" resize="right" sysregion="1" />

	<layer id="pledit.left.front" dblClickAction="SWITCH;NORMAL" x="0" y="0" image="pl.left.front" resize="left" />
	<layer id="pledit.middle" dblClickAction="SWITCH;NORMAL" x="26" y="0" w="-83" relatw="1" image="pl.middle" sysregion="1" />
	<layer id="pledit.right.front" dblClickAction="SWITCH;NORMAL" x="-57" relatx="1" y="0" image="pl.right.front" resize="right" />


	<layer id="pledit.left.display" dblClickAction="SWITCH;NORMAL" x="14" y="4" image="pl.left.display"/>
	<layer id="pledit.middle.display" dblClickAction="SWITCH;NORMAL" x="39" y="4" w="-110" relatw="1" image="pl.middle.display" sysregion="1" />
	<layer id="pledit.right.display" dblClickAction="SWITCH;NORMAL" x="-91" y="4" w="52" relatx="1" image="pl.right.display" sysregion="1" />

	<group id="pledit.songdisplay" x="6" y="0" w="-45" h="0" relatw="1" relath="1" />

	<layer id="pledit.left.display.ov" dblClickAction="SWITCH;NORMAL" x="14" y="4" image="pl.left.display.ov"/>
	<layer id="pledit.middle.display.ov" dblClickAction="SWITCH;NORMAL" x="39" y="4" w="-110" relatw="1" image="pl.middle.display.ov" sysregion="1" />
	<layer id="pledit.right.display.ov" dblClickAction="SWITCH;NORMAL" x="-91" y="4" w="52" relatx="1" image="pl.right.display.ov" sysregion="1" />

	<button
		id="big2"
		action="SWITCH" param="normal"
		x="-27" y="4"
		relatx="1"
		image="playershade.button.big2"
		downImage="playershade.button.big2.down"
		tooltip="Switch to normal mode"
		rectrgn="1"
	/>

	<button
		id="sClose"
		action="CLOSE"
		x="-16" y="4"
		relatx="1"
		image="playershade.button.close"
		downImage="playershade.button.close.down"
		tooltip="Close"
	/>

</groupdef>

<layout id="plshade" minimum_w="130" linkwidth="normal" default_w="381" default_h="23" maximum_h="23" minimum_h="23">
	<group id="pledit.stick.content.group" x="0" y="0" w="0" h="0" relatw="1" relath="1" />
</layout>